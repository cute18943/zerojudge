#include<stdio.h>
#include<stdlib.h>
int main()
{
	int a;
int i,j;
	while((scanf("%d",&a))!=EOF)
	{
		for(i=1;i<=a;i++)//控制行數
{
 int sp=a-i;//一行內的空白和星號數量是互補的
 for(;sp>0;sp--)//控制空白數
  printf("_");
 for(j=0;j<i;j++)//控制星號數
  printf("+");
 printf("\n");
}	
	}
return 0;
}

