#include<stdio.h>
#include<stdlib.h>
#include<string.h> 
int main()
{
int a;
	
	while((scanf("%d",&a))!=EOF)
	{
		
    if(a<=10){
    	a=a*6;
    	printf("%d\n",a);
	}else if(a>=11 && a<=20){
		a=((a-10)*2)+60;
			printf("%d\n",a);
	}else if(a>=21 && a<=40){
		a=((a-20)*1)+80;
			printf("%d\n",a);
	}else{
		a=100;
		printf("%d\n",a);
	}
    
    

	}	
	
return 0;
}

